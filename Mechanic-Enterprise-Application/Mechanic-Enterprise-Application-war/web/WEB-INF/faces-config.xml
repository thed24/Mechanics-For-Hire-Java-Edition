<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">   
    <navigation-rule>
        <from-view-id>/registerUser.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{UserManagedBean.addUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/registerUserSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{UserManagedBean.addUser}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/registerUserFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/createAdvertisement.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{AdvertisementManagedBean.addAdvertisement}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/createAdvertisementSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{AdvertisementManagedBean.addAdvertisement}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/createAdvertisementFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/mainmenu.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{AdvertisementManagedBean.delete}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/deleteAdvertisementSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{AdvertisementManagedBean.delete}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/deleteAdvertisementFailure.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{AdvertisementManagedBean.book}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/bookAdvertisementSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{AdvertisementManagedBean.book}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/bookAdvertisementFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/editAdvertisement.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{AdvertisementManagedBean.edit}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/editAdvertisementSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{AdvertisementManagedBean.edit}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/editAdvertisementFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/loginUser.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{UserManagedBean.validateAndLogin}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/loginUserSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{UserManagedBean.validateAndLogin}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/loginUserFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
